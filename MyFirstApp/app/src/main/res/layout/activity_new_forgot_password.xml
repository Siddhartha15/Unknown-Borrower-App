<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Password"
        android:textSize="24sp"
        android:textAlignment="center"
        android:padding="12dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a unique password to protect your account"
        android:textAlignment="center"
        android:textSize="15sp"
        android:padding="4dp"
        android:textColor="#DDD"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate a new password"
        android:paddingLeft="15dp"
        android:paddingTop="16dp"
        android:textSize="24sp"
        android:textColor="#444"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Passwords are case-sensitive and must be at least 6 characters."
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type your new password"
        android:paddingLeft="14dp"
        android:paddingTop="18dp"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:ems="22"
        android:hint="Password"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retype your new password"
        android:paddingLeft="15dp"
        android:paddingTop="18dp"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/retype_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:ems="22"
        android:hint="Password"
        android:textSize="15sp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Submit"
        android:background="@drawable/my_border"
        android:layout_gravity="center_horizontal"

        />

</LinearLayout>