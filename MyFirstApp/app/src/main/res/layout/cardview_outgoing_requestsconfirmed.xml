<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_alignParentStart="true"
    android:layout_height="140dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="171dp"
            android:layout_height="36dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="9dp"
            android:text="Siddhartha"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/requestDateTextView"
            app:layout_constraintEnd_toStartOf="@+id/viewProfileButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="74dp"
            android:layout_height="38dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="9dp"
            app:layout_constraintCircleRadius="5dp"
            android:background="@drawable/my_border"
            android:text="PAY"
            app:layout_constraintBottom_toTopOf="@+id/requestDateTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewProfileButton"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/viewProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintCircleRadius="5dp"
            android:background="@drawable/my_border"
            android:text="View Profile"
            app:layout_constraintBottom_toTopOf="@+id/requestDateTextView"
            app:layout_constraintEnd_toStartOf="@+id/payButton"
            app:layout_constraintStart_toEndOf="@+id/nameTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/requestDateTextView"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="5dp"
            android:hint="@string/date2"
            android:text="Requested Date"
            app:layout_constraintBottom_toTopOf="@+id/ConfirmedDateTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewProfileButton" />

        <TextView
            android:id="@+id/ConfirmedDateTextView"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="95dp"
            android:layout_marginBottom="15dp"
            android:hint="@string/date3"
            android:text="Confirmed Date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>