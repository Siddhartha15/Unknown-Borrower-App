<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/row_padding"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingTop="@dimen/row_padding">

        <View
            android:layout_width="15dp"
            android:id="@+id/sideBar"
            android:layout_height="match_parent"
            app:layout_constraintRight_toLeftOf="@id/borrower_name"
            android:layout_marginRight="14dp"
            android:background="#20639b">
        </View>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/thumbnail"
            android:hint="@drawable/th"
            android:layout_toEndOf="@id/sideBar"
            android:layout_marginTop="25dp"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginEnd="@dimen/row_padding"
            android:elevation="2dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#A1887F"/>

        <TextView
            android:id="@+id/name"
            android:hint="Niwedita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/thumbnail"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/contact_name"
            android:textSize="@dimen/contact_name"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="@dimen/row_padding"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/organization"
            android:hint="Oracle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/thumbnail"
            android:textColor="@color/contact_organization"
            android:textSize="@dimen/contact_organization"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="@dimen/row_padding"/>

        <TextView
            android:id="@+id/city"
            android:hint="Bangalore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_toEndOf="@id/organization"
            android:textColor="@color/contact_city"
            android:textSize="@dimen/contact_city"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="@dimen/row_padding"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>